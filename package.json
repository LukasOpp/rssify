{
  "name": "rssify",
  "main": "dist/index.js",
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@apify/tsconfig": "0.1.0",
    "@types/express": "4.17.21",
    "@types/mime": "3.0.4",
    "@types/node": "18.11.9",
    "@types/node-cron": "3.0.11",
    "browser-sync": "3.0.2",
    "concurrently": "8.2.2",
    "nodemon": "3.1.0",
    "npm-run-all": "4.1.5",
    "ts-node": "10.9.2",
    "typescript": "5.4.3"
  },
  "scripts": {
    "dev:backend": "nodemon --watch src --exec ts-node src/index.ts",
    "dev:frontend": "browser-sync start --config bs-config.cjs",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "build": "tsc src/index.ts --target esnext --module esnext --outDir dist"
  },
  "dependencies": {
    "crawlee": "3.8.2",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "node-cron": "3.0.3",
    "openai": "4.31.0",
    "pg-promise": "11.5.5",
    "playwright": "1.42.1",
    "pug": "3.0.2"
  },
  "resolutions": {
    "@types/mime": "3.0.4"
  }
}
